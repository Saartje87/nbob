{
	"project": {
		"name": "Unnamed",
		"version": "0",
		"files": [
			"**/*",
			"!build/**/*",
			"!dist/**/*",
			"!nbob-config.json",
			"!*.sublime-*",
			"!node_modules/**/*"
		],
		"buildDir": "build",
		"distDir": "dist"
	},
	"analyze:js:hint": {
		"files": [ "**/*.js" ],
		"rcFile": ".jshintrc",
		"ignoreFile": ".jshintignore"
	},
	"build:html:l10n": {
		"files": [ "**/*-l10n.html", "**/*-l10n/**/*.html" ],
		"locale": "en-us"
	},
	"build:html:templates": {
		"files": [ "templates/*/*.html" ],
		"ext": ".html"
	},
	"build:css:less": {
		"files": [ "**/*.less" ]
	},
	"build:js:minify": {
		"files": [ "{lib,src}/**/*.js{,.map}", "!**/*.min.js" ]
	},
	"build:js:concat": {
		"files": [ "{lib,src}/**/*.min.js{,.map}" ],
		"output": "{{project.name}}-{{project.version}}.min.js"
	},
	"build:js:amd": {
		"files": [ "{{build:js:concat.output}}{,.map}" ],
		"exports": []
	},
	"build:dist": {
		"files": [ "**/*", "!**/*.less" ]
	},
	"server": {
		"port": 8080
	},
	"deploy": {
		"user": null,
		"accessKey": null,
		"secretKey": null
	}
}
