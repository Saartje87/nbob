{
	"project": {
		"name": "Unnamed",
		"version": "0",
		"files": [
			"**/*",
			"{{make:js:hint.rcFile}}",
			"{{make:js:hint.ignoreFile}}",
			"!build/**/*",
			"!dist/**/*",
			"!nbob-config.json",
			"!*.sublime-*",
			"!node_modules/**/*"
		],
		"buildDir": "build",
		"distDir": "dist"
	},
	"update:api": {
		"template": "playtotv-define",
		"host": null,
		"resources": []
	},
	"update:l10n": {
		"locales": "l10n/*.json",
		"files": [ "{{update:l10n.locales}}", "**/*-l10n.html", "**/*-l10n/**/*.html" ]
	},
	"make:l10n": {
		"locales": "{{update:l10n.locales}}",
		"files": "{{> update:l10n.files}}",
		"default": null
	},
	"make:html:templates": {
		"files": [ "templates/*/*.html" ],
		"ext": ".html",
		"trim": true
	},
	"make:css:less": {
		"files": [ "**/*.less" ]
	},
	"make:js:hint": {
		"rcFile": ".jshintrc",
		"ignoreFile": ".jshintignore",
		"files": [ "{{make:js:hint.rcFile}}", "{{make:js:hint.ignoreFile}}", "**/*.js" ]
	},
	"make:js:minify": {
		"files": [ "{lib,src}/**/*.js{,.map}", "!**/*.min.js" ],
		"options": {
			"compressor": {
				"drop_debugger": false
			}
		}
	},
	"make:js:concat": {
		"files": [ "{lib,src}/**/*.min.js{,.map}" ],
		"output": "{{project.name}}-{{project.version}}.min.js"
	},
	"make:js:amd": {
		"files": [ "{{make:js:concat.output}}{,.map}" ],
		"exports": []
	},
	"make:substitute:path": {
		"files": [ "**/*__*__*{,/**/*}" ],
		"substitutes": {
			"PROJECT": "{{project.name}}",
			"VERSION": "{{project.version}}",
			"MIN_JS": "{{make:js:concat.output}}"
		}
	},
	"make:substitute:text": {
		"files": [ "**/*.{html,css,js,json}" ],
		"substitutes": "{{> make:substitute:path.substitutes}}"
	},
	"make:dist": {
		"files": [ "**/*" ]
	},
	"server": {
		"port": 8080
	},
	"deploy": {
		"files": [ "**/*", "!**/*.{gv,map}" ],
		"region": "eu-west-1",
		"bucketName": null,
		"force": false,
		"cacheControl": "max-age=3600",
		"gzipThreshold": 1000
	},
	"envConfigMap": {}
}
