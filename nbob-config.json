{
	"project": {
		"name": "Unnamed",
		"version": "0",
		"files": [
			"**/*",
			"!build/**/*",
			"!dist/**/*",
			"!nbob-config.json",
			"!*.sublime-*",
			"!node_modules/**/*"
		],
		"distDir": "dist"
	},
	"analyze:js:hint": {
		"files": [ "**/*.js" ],
		"rcFile": ".jshintrc",
		"ignoreFile": ".jshintignore"
	},
	"build:html:l10n": {
		"files": [ "**/*-l10n.html", "**/*-l10n/**/*.html" ],
		"locale": "en-us"
	},
	"build:html:templates": {
		"files": [ "templates/*/*.html" ],
		"ext": ".html"
	},
	"build:css:less": {
		"files": [ "**/*.less" ]
	},
	"build:js:concat": {
		"files": [ "lib/**/*.js", "src/**/*.js" ],
		"output": "{{project.name}}-{{project.version}}.js"
	},
	"build:js:amd": {
		"files": [ "**/*.js" ],
		"exports": []
	},
	"build:dist": {
		"files": [ "**/*", "!**/*.less" ]
	},
	"server": {
		"port": 8080
	},
	"deploy": {
		"user": null,
		"accessKey": null,
		"secretKey": null
	}
}
